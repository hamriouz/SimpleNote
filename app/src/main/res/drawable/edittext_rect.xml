<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    
    <!-- Top border -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD"/>
        </shape>
    </item>
    
    <!-- Left border -->
    <item android:top="1dp" android:left="0dp" android:right="1dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD"/>
        </shape>
    </item>
    
    <!-- Right border -->
    <item android:top="1dp" android:left="1dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD"/>
        </shape>
    </item>
    
    <!-- Inner content area -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>
</layer-list> 